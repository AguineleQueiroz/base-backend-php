{
    "name": "aq/e-shop",
    "description": "php application boilerplate",
    "autoload": {
        "files": [
            "app/database/connect.php",
            "app/database/fetch.php",

            "app/helpers/constants.php",
            "app/helpers/helpers.php",
            "app/helpers/redirect.php",

            "app/router/router.php",

            "app/controllers/Controller.php"
        ],
        "psr-4": {
            "app\\": "app"
        }
    },
    "scripts": {
        "server": "php -S localhost:8000 -t public"
    },
    "authors": [
        {
            "name": "AguineleQueiroz",
            "email": "aguinelequeiroz@outlook.com"
        }
    ],
    "require": {
      "ext-pdo": "*"
    },
    "config": {
        "process-timeout": 0
    }
}
